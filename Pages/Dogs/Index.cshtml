@page
@model DogShelter.Pages.Dogs.IndexModel

@{
    ViewData["Title"] = "Dogs";
}

<h1>Dogs</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>

<form asp-page="./Index" method="get">
    <div class="form-actions no-color">
        <p>
            Find by name:
            <input type="text" name="SearchString" value="@Model.CurrentFilter" />
            <input type="submit" value="Search" class="btn btn-primary" /> |
            <a asp-page="./Index">Back to full List</a>
        </p>
    </div>
</form>

<table class="table">
    <thead>
    <th>
        <a asp-page="./Index" asp-route-sortOrder="@Model.NameSort">
            @Html.DisplayNameFor(model => model.Dog[0].Name)
        </a>
    </th>
    <th>
        <a asp-page="./Index" asp-route-sortOrder="@Model.DateSort">
            @Html.DisplayNameFor(model => model.Dog[0].Dob)
        </a>
    </th>

    <th>
        @Html.DisplayNameFor(model => model.Dog[0].Breed)
    </th>
    <th>
        @Html.DisplayNameFor(model => model.Dog[0].Sex)
    </th>
    <th>
        @Html.DisplayNameFor(model => model.Dog[0].Summary)
    </th>
    <th>
        @Html.DisplayNameFor(model => model.Dog[0].ImageUrl)
    </th>
    <th></th>
    </thead>
    <tbody>
    @foreach (var item in Model.Dog)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Dob)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Breed)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Sex)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Summary)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ImageUrl)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.ID">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
    }
    </tbody>
</table>