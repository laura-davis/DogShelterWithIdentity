@page
@model DogShelter.Pages.Dogs.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Dog</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Dog.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Dog.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Dog.Dob)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Dog.Dob)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Dog.Breed)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Dog.Breed)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Dog.Sex)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Dog.Sex)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Dog.Summary)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Dog.Summary)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Dog.ImageUrl)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Dog.ImageUrl)
        </dd>
        <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Dog.Adoptions)
                </dt>
                <dd class="col-sm-10">
                    <table class="table">
                        <tr>
                            <th>Owner</th>
                            <th>Adoption Date</th>
                        </tr>
                        @foreach (var item in Model.Dog.Adoptions)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.User.FirstName+ " " +item.User.LastName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.AdoptionDate)
                                </td>
                            </tr>
                        }
                    </table>
                </dd>
    </dl>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.Dog.ID">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>
